<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/activity_page" >

    <RelativeLayout
        android:id="@+id/rlBottomTabTopbar"
        style="@style/topbar_bg">

        <TextView
            style="@style/topbar_title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="主页"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/btn_add_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:padding="4dp"
            android:src="@drawable/add_small"
            android:visibility="visible" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/flMainTabFragmentContainer"
        style="@style/match_match"
        android:layout_weight="1" >
    </FrameLayout>

    <View style="@style/divider_horizontal_1px_gray" />

    <LinearLayout
        style="@style/ll_horizontal_match_wrap"
        android:layout_height="@dimen/bottombar_height"
        android:background="@color/topbar_bg"
        android:paddingTop="4dp">

        <LinearLayout
            android:id="@+id/llBottomTabTab0"
            style="@style/bottom_tab_ll"
            android:layout_weight="1"
            android:alpha="@dimen/alpha_button">

            <ImageView
                android:id="@+id/ivBottomTabTab0"
                style="@style/bottom_tab_iv"
                android:layout_height="26dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/service_seletor" />

            <TextView
                android:id="@+id/tvBottomTabTab0"
                style="@style/bottom_tab_tv"
                android:text="Service"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBottomTabTab1"
            style="@style/bottom_tab_ll"
            android:layout_weight="1"
            android:alpha="@dimen/alpha_button">

            <ImageView
                android:id="@+id/ivBottomTabTab1"
                style="@style/bottom_tab_iv"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/map_selector" />

            <TextView
                android:id="@+id/tvBottomTabTab1"
                style="@style/bottom_tab_tv"
                android:text="Map"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBottomTabTab2"
            style="@style/bottom_tab_ll"
            android:layout_weight="1"
            android:alpha="@dimen/alpha_button">

            <ImageView
                android:id="@+id/ivBottomTabTab2"
                style="@style/bottom_tab_iv"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/contacts_selector" />

            <TextView
                android:id="@+id/tvBottomTabTab2"
                style="@style/bottom_tab_tv"
                android:text="Contacts"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBottomTabTab3"
            style="@style/bottom_tab_ll"
            android:layout_weight="1"
            android:alpha="@dimen/alpha_button">

            <ImageView
                android:id="@+id/ivBottomTabTab3"
                style="@style/bottom_tab_iv"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/setting_selector" />

            <TextView
                android:id="@+id/tvBottomTabTab3"
                style="@style/bottom_tab_tv"
                android:text="Settings"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>